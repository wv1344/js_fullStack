/* pages/mine/mine.wxss */
.page{
  width: 100%;
  height: 100%;
  background-color: #eee;
}
.header{
  position: relative;
  background-color: #fff;
  height: 90px;
}
.head_content{
  width: 100%;
  height: 60px;
  position: absolute;
  margin:auto;
  top: 0;left: 0;right: 0;bottom: 0;
}
.left{
  display: inline-block;
  height:60px;
  line-height: 60px;
  /* vertical-align: middle; */
}
.right{
  float: right;
}
.right image{
  height: 60px;
  width: 60px;
}
.content{
  margin-top: 10px;
  height: 100%;
  background-color: #fff;
}
.item{
  height: 65px;
  width: 100%;
  position: relative;
  display: flex;
  justify-items: center;
  align-items: center;
}
.item text{
  width: 80%;
}
.item image{
  width: 35px;
  height: 35px;
}

.foot{
  background-color: #fff;
  margin-top: 10px;
  text-align: center;
  height: 65px;
}