$bgi = 'https://dss3.bdstatic.com/70cFv8Sh_Q1YnxGkpoWK1HF6hhy/it/u=2455100451,3980453752&fm=26&gp=0.jpg'
* 
  margin 0
  padding 0
html,body 
  width 100%
  height 100%
.page 
  width 100%
  height 100%
  overflow hidden
  background-image url($bgi)
  background-repeat no-repeat
  background-size auto 100%
  .page_hd
    width 1.8666667rem
    height 0.555rem
    color #ffffff
    font-size 0.46rem
    margin 2.96rem auto
  .page_content
    .page_content_number
      width 6.96rem
      display flex 
      margin-left 1.45rem
      .number
        width 1.62rem
        height 1.62rem
        line-height 1.62rem
        border-radius 50%
        border 2px solid #81969c
        font-size 25px
        text-align center
        font-weight 100
        color #e8ffff
        margin-bottom 0.72rem
    .numbermid, .numberleft
      margin-right 1.03rem
.page_font
  color rgba(255,255,255,.5)
  font-size 0.444rem
  .page_foot
    display flex
    padding-top 0.59rem
    margin-bottom 0.259rem
    .page_foot__left
      @extend .page_font
      margin-left 0.25rem
      flex 1
    .page_foot__right
      @extend .page_font
      width 1.88rem