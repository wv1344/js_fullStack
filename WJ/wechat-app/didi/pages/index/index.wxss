page{
  width: 100%;
  height: 100vh;
  background-color: #f4f6f8;
}
.section{
  height: 108rpx;
  width: 100%;
  background-color: #fff;
  position: fixed;
  left: 0;top: 0;
}
.nav{
  height: 108rpx;
  line-height: 108rpx;
  width: 550rpx;  
  box-sizing: border-box;
  overflow: hidden;
  font-size: 16px;
  word-spacing: normal;
  position: fixed;
  top: 0;
  left: 100rpx;
  right: 100rpx;
  z-index: 999;
  margin-bottom: 32rpx;
}
.nav-all{
  height: 30rpx;
  width: 30rpx;
  position: absolute;
  right: 0;
  top: 0;
  transform: scale(.18);
  margin-right: 80rpx;
}
.nav-me{
  width: 30rpx;
  height: 30rpx;
  left: 0;
  margin-top: 10rpx;
  position: absolute;
  transform: scale(.15);
}
.nav-item{
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: inline-block;
  text-align: center;
}
.nav-item.active{
  color:#fc975c;
}