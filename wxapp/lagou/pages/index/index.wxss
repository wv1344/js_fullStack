.page{
  width: 100%;
  height: 100%; 
  margin: 0;
  padding: 0;
}
.header{
  width: 100%;
  height: 100%;
  background: #31B689;
  text-align: center;
}
.header .logo{
  width: 100%;
  height: 100%;
}
.header .img{
  width: 120px;
  height: 90px;
}
.header .search{
  width: 100%;
  background: #31B689;
  padding-bottom: 10px;
}
.header .search button{
  width: 90%;
  height: 40px;
  background: #fff;
  border: 1px solid #fff;
  border-radius: 40px;
  color: #d8d7d7;
  line-height: 40px;
  font-size: 16px;
  text-align: center;
  vertical-align: middle;
}
.header .search .search-icon{
  height: 18px;
  /* padding-top: 10px */
}
.header .search .text{
  display: inline-block;
  /* padding-bottom: 10px; */
}
.select{
  width: 100%;
  height: 40px;
}
.select .select-item{
  line-height: 40px;
  margin: 10px;
}
.content{
  width: 100%;
  height: 100%;
}
.content .box{
  width: 90%;
  margin: 0 auto;
  border-top: 1px solid #EAEAEA ;
  padding-top: 15px;
}
.content .box .left{
  float: left;
  width: 60px;
  height: 60px;
}
.content .box .left image{
  width:20%;
  height: 100%;
  display: inline-block;
}
.content .box .center{
  display: inline-block;
  width: 60%;
  float: left;
}
.content .box .center .title{
  font-size: 16px;
  display: block;
}
.content .box .center .company{
  font-size: 14px;
  display: block;
  color: #787878;
  margin-top: 5px;
}
.content .box .center .desc{
  font-size: 12px;
  display: block;
  color: #9D9D9D;
  margin-top: 5px;
}
.content .box .right{
  float: left;
  width: 20%;
}
.content .box .right .money{
  font-size: 16px;
  display: block;
  color: #FD5F39;
  float: right;
}
.content .box .right .date{
  font-size: 14px;
  display: block;
  float: right;
  margin-top: 25px;
  color: #9D9D9D;
}