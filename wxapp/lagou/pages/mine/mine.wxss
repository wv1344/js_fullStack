/* pages/mine/mine.wxss */
.page{
  width: 100%;
  height: 100%;
  background-color: #eee;
}
.header{
  position: relative;
  background-color: #fff;
  height: 90px;
}
.head_content{
  width: 100%;
  height: 60px;
  position: absolute;
  margin:auto;
  top: 0;left: 0;right: 0;bottom: 0;
}
.left{
  display: inline-block;
  height:60px;
  line-height: 60px;
}
.right{
  float: right;
}
.right image{
  height: 60px;
  width: 60px;
}
.content{
  margin-top: 10px;
  background-color: #fff;
}
.content .item{
  height: 65px;
  border-bottom: 1px solid #eee;
  position: relative;
  line-height: 65px;
}
.content text{
  padding-left: 35px;
}
.content .item image{
  width: 26px;
  height: 26px;
  position: absolute;
  top: 50%;
  margin-top: -13px;
  padding-left: 5px;
}
.content .item span{
  float: right;
  padding-right: 10px;
}


.qiehuan{
  background-color: red;
  margin-top: 10px;
  text-align: center;
  height: 65px;
}
.qiehuan span{
  line-height: 65px;
}